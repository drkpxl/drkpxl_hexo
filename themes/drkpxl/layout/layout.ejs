<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= config.title %> - <%= page.title || 'Home' %></title>
    <link rel="stylesheet" href="<%= url_for('/css/style.css') %>">
</head>
<body>
    <nav>
        <% if (theme.menu) { %>
            <% Object.keys(theme.menu).forEach(function(key) { %>
                <a href="<%= url_for(theme.menu[key]) %>"><%= key %></a>
            <% }); %>
        <% } %>
    </nav>
    <main>
        <%- body %>
    </main>
    <footer>
        <p>&copy; <%= new Date().getFullYear() %> <%= config.author %>. All rights reserved.</p>
    </footer>
</body>
</html>
